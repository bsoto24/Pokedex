<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.openlab.pokedex.DetalleActivity">

    <ImageView
        android:id="@+id/tv_pokemon_imagen"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/meowth"/>

    <TextView
        android:id="@+id/tv_pokemon_nombre"
        android:layout_width="match_parent"
        android:text="MEOWTH"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="TIPO: "
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_pokemon_tipo"
            android:text="NORMAL"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginRight="40dp"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="VIDA: "
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_pokemon_vida"
            android:text="200"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginRight="40dp"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="ATAQUE: "
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_pokemon_ataque"
            android:text="ARAÃ‘AZO"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginRight="40dp"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
